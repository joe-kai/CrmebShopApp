<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/detailAppraiseLayout"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    app:shape_radius="@dimen/dp_10"
    app:shape_solidColor="@color/white">

    <TextView
        android:id="@+id/txv_appraise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:text="@string/appraise"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_appraise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:paddingHorizontal="@dimen/dp_10" />

    <com.hjq.shape.view.ShapeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_15"
        android:layout_marginVertical="@dimen/dp_5"
        android:padding="@dimen/dp_5"
        android:text="@string/see_all_appraise"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_12"
        app:shape="rectangle"
        app:shape_strokeColor="@color/black25"
        app:shape_strokeWidth="@dimen/line_size" />


</com.hjq.shape.layout.ShapeLinearLayout>